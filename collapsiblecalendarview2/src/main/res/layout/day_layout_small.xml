<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingVertical="3dp"
    android:paddingHorizontal="7dp"
    android:gravity="center">

    <com.sinaseyfi.advancedcardview.AdvancedCardView
        android:id="@+id/container_txt_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:background_Color="#00000000"
        app:cornerRadius="8dp"
        app:corner_Type="third"
        app:stroke_Type="solid"
        app:background_Type="stroke"
        app:stroke_Width="2dp"
        app:stroke_ColorType="gradient_linear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txt_day"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:paddingVertical="5dp"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            tools:text="Date" />
    </com.sinaseyfi.advancedcardview.AdvancedCardView>

    <ImageView
        android:id="@+id/img_event_tag"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_margin="2dp"
        android:src="@drawable/dot_icon"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/container_txt_day"
        app:layout_constraintTop_toTopOf="@id/container_txt_day"
        tools:visibility="visible" />
</androidx.constraintlayout.widget.ConstraintLayout>